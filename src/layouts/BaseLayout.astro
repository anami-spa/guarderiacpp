---
import '@/src/styles/globals.css';
import { BASE_URL } from '@/src/config';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Aguú Guardería y After School | Concepción, Chile',
  description = 'Guardería y After School en el centro de Concepción. Cuidado seguro, atención personalizada y registro diario completo para familias que trabajan. Horario flexible 8:00-19:00 hrs.',
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="guardería Concepción, after school Concepción, cuidado infantil, jardín infantil, guardería centro Concepción" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="business.business" />
    <meta property="og:site_name" content="Aguú Guardería y After School" />
    <meta property="og:title" content="Aguú Guardería y After School | Concepción" />
    <meta property="og:description" content="Cuidado seguro y atención personalizada para tu hijo en el centro de Concepción. Horario flexible de 8:00 a 19:00 hrs." />
    <meta property="og:url" content="https://aguu.cl/" />
    <meta property="og:locale" content="es_CL" />
    <meta property="og:image" content="https://aguu.cl/happy-children-playing-in-modern-daycare-center.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Niños felices en Aguú Guardería Concepción" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Aguú Guardería y After School | Concepción" />
    <meta name="twitter:description" content="Cuidado seguro y atención personalizada para tu hijo en el centro de Concepción. Horario flexible de 8:00 a 19:00 hrs." />
    <meta name="twitter:image" content="https://aguu.cl/happy-children-playing-in-modern-daycare-center.jpg" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#4FB7AD" />

    <!-- Structured Data (JSON-LD) - Local Business -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ChildCare",
        "name": "Aguú Guardería y After School",
        "description": "Guardería y After School en el centro de Concepción. Cuidado seguro, atención personalizada y registro diario completo para familias que trabajan.",
        "url": "https://aguu.cl/",
        "logo": "https://aguu.cl/icon.svg",
        "image": "https://aguu.cl/happy-children-playing-in-modern-daycare-center.jpg",
        "telephone": "+56963736611",
        "email": "aguu.concepcion@gmail.com",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Lautaro 431",
          "addressLocality": "Concepción",
          "addressRegion": "Biobío",
          "postalCode": "4030000",
          "addressCountry": "CL"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": "-36.827",
          "longitude": "-73.050"
        },
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
            "opens": "08:00",
            "closes": "19:00"
          }
        ],
        "priceRange": "$$",
        "areaServed": {
          "@type": "City",
          "name": "Concepción",
          "@id": "https://www.wikidata.org/wiki/Q2256"
        },
        "sameAs": []
      }
    </script>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href={`${BASE_URL}/favicon.ico`} />
    <link rel="icon" type="image/png" sizes="32x32" href={`${BASE_URL}/favicon-32x32.png`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${BASE_URL}/favicon-16x16.png`} />
    <link rel="icon" type="image/png" sizes="192x192" href={`${BASE_URL}/icon-192x192.png`} />
    <link rel="icon" type="image/png" sizes="512x512" href={`${BASE_URL}/icon-512x512.png`} />
    <link rel="apple-touch-icon" sizes="180x180" href={`${BASE_URL}/apple-icon.png`} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body class="font-sans antialiased">
    <!-- Skip to main content link for accessibility -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary focus:text-white focus:rounded-lg"
    >
      Saltar al contenido principal
    </a>
    <slot />
  </body>
</html>
